<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_800">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_albuns_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_margin="13dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/cardview_albuns_img_banda_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banda1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo" />
            <TextView
                android:id="@+id/cardview_albuns_nome_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Album"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/grey_800"
                android:layout_marginStart="13dp"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:id="@+id/cardview_albuns_ano_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ano - 0000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/grey_800"
                android:layout_marginStart="13dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
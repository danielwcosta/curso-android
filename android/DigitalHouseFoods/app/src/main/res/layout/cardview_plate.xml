<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_plate_card_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardview_plate_img_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/plate_salada_img"
                android:adjustViewBounds="true"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/cardview_plate_name_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Salada com molho de gengibre"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/blue_grey_600"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
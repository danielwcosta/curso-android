<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_restaurant_card_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardview_restaurant_img_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant_tony_img"
                android:adjustViewBounds="true"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/cardview_restaurant_name_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="RESTAURANT NAME"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/cardview_restaurant_adress_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Restaurant Adress"
                android:textSize="13sp"
                android:textColor="@color/blue_grey_600"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/cardview_restaurant_closed_time_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Restaurant closed time"
                android:textSize="13sp"
                android:textColor="@color/blue_grey_600"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/background_red</item>
    </style>
    <style name="AppThemeMarvel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_red</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorAccent">@color/background_red</item>
    </style>
    <style name="SplashTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">@color/blue_grey_100</item> // Cor padr√£o da linha
        <item name="colorControlActivated">@color/blue_grey_100</item> // Cor linha e texto quando recebe foco
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColorHint">@color/background_red</item> // Cor texto(hint) sem foco
        <item name="android:textColor">@color/background_red</item> // Cor texto
    </style>

</resources>